@charset "utf-8";

body,html{-webkit-text-size-adjust:none}
a,a.a-light,button,img{text-decoration:none}
.loding,.loding p,.spinner,.spinner div{position:absolute}
.btn,a,body,button,html,img{-webkit-user-select:none}
.icon-mark,.iconfont,em,i{font-style:normal}
.g-summary p,.g-summary summary,.product-info p,.product-value .ui-g-info h3,.ui-comment p{text-overflow:ellipsis;-webkit-box-orient:vertical}
body,html{-webkit-tap-highlight-color:transparent;height:100%}
article,aside,blockquote,body,button,code,dd,details,div,dl,dt,fieldset,figcaption,figure,footer,form,h1,h2,h3,h4,h5,h6,header,input,legend,li,menu,nav,ol,p,pre,section,span,td,textarea,th,ul{margin:0;padding:0;-webkit-box-sizing:border-box;box-sizing:border-box;font-size:1.4rem}
.btn,.ui-box{box-sizing:border-box}
table{border-collapse:collapse;border-spacing:0}
fieldset,img{border:0}
address,caption,cite,code,dfn,em,i,strong,th,var{font-style:normal;font-weight:400}
ol,ul{list-style:none}
caption,th{text-align:left}
.center,.discount,.loding,.loding p{text-align:center}
h1,h2,h3,h4,h5,h6{font-weight:400}
q:after,q:before{content:''}
address, caption, cite, code, dfn, em, i, strong, th, var {
    font-style: normal;
    font-weight: 400;
}
i, cite, em, var, address, dfn {
    font-style: italic;
}
button, input {
    -webkit-appearance: none;
}

a, button, input {
    -webkit-tap-highlight-color: rgba(255,255,255,0);
}
button, input, textarea {
    font-family: "microsoft yahei",helvetica;
}

sup {
    vertical-align: text-top;
}
.btn-round-cart, sup {
    border-radius: 100%;
    text-align: center;
    position: absolute;
}

sup {
    height: 16px;
    width: 16px;
    line-height: 16px;
    color: #fff;
    background-color: #35c367;
    top: 2px;
    right: 5px;
}


@font-face{
    font-family:iconfont;
    src:url(../../src/font/iconfont/iconfont.eot);
    src:url(../../src/font/iconfont/iconfont.eot?#iefix) format('embedded-opentype'),
    url(../../src/font/iconfont/iconfont.woff) format('woff'),
    url(../../src/font/iconfont/iconfont.ttf) format('truetype')
    /*url(../../src/font/iconfont/iconfont.svg#iconfont) format('svg')*/
}